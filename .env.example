# GitHub Personal Access Token
# https://github.com/settings/tokens adresinden oluşturabilirsiniz
# Gerekli izinler: repo, read:user
GITHUB_TOKEN=your_github_token_here

# GitHub kullanıcı adınız
GITHUB_USERNAME=your_username_here

# Sunucu portu
PORT=3000

# Gizli repoları göster (true/false)
SHOW_PRIVATE_REPOS=false

# API butonunu göster (true/false)
SHOW_API_BUTTON=false

# Varsayılan dil (TR/EN)
DEFAULT_LANG=TR

# Gizlenecek repolar (virgülle ayırarak yazın)
# Örnek: HIDDEN_REPOS=private-project,secret-repo,test-app
HIDDEN_REPOS=elif

# Discord Webhook Ayarları.
# Discord kanal ayarları > Entegrasyonlar > Webhooks'tan alabilirsiniz
DISCORD_WEBHOOK_URL=
DISCORD_NOTIFICATIONS=false
